<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>{{PackageName}}</id>
        <version>{{PackageVersion}}</version>
        <title>LibreOffice Help Pack</title>
        <authors>LibreOffice community</authors>
        <licenseUrl>https://www.libreoffice.org/download/license/</licenseUrl>
        <projectUrl>https://www.libreoffice.org/</projectUrl>
        <iconUrl>http://tomone.github.io/icons/libreoffice.svg</iconUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>This installs the help pack for LibreOffice, the free and open source office suite.
It detects the current system language and installs the help pack with the same language. If the LibreOffice help pack is not available for your language, it will install with en-US.</description>
        <summary>Help Pack for LibreOffice</summary>
        <releaseNotes />
        <copyright />
        <tags>libreoffice office help admin</tags>
        <dependencies>
            <dependency id="libreoffice" />
        </dependencies>
    </metadata>
    <files>
        <file src="tools\**" target="tools" />
    </files>
</package>