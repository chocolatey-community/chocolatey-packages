root = true

[*.nuspec]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.ps1]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.ketarin.xml]
charset = utf-8
end_of_line = crlf
insert_final_newline = false
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Note: This configuration is not DRY, but currently editorconfig-sublime has
# problems with multiple strings matching
